{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "addLabels": ["dependencies"],
  "prCreation": "not-pending",
  "packageRules": [
    {
      "groupName": "Dependencies",
      "matchPaths": ["./**"],
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
